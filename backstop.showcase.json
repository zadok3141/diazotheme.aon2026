{
  "id": "aon2026_theme_showcase",
  "viewports": [
    {
      "label": "xs",
      "width": 360,
      "height": 640
    },
    {
      "label": "xl",
      "width": 1440,
      "height": 900
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "hideSelectors": [
    ".oagbanner"
  ],
  "scenarios": [],
  "paths": {
    "bitmaps_reference": "backstop_data/showcase_bitmaps_reference",
    "bitmaps_test": "backstop_data/showcase_bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/showcase_html_report"
  },
  "report": [
    "browser"
  ],
  "engine": "puppeteer",
  "engineOptions": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ],
    "headless": true,
    "ignoreHTTPSErrors": true
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false,
  "misMatchThreshold": 0.1,
  "requireSameDimensions": true,
  "resembleOutputOptions": {
    "errorColor": {
      "red": 255,
      "green": 0,
      "blue": 255
    },
    "errorType": "movement",
    "transparency": 0.3,
    "ignoreAntialiasing": true
  }
}